<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/layout/main_old.jsp”所装饰 -->
    <mapping decorator="/WEB-INF/views/layout/main.jsp" />

    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/login" exclue="true"/>
    <mapping path="/*/add*" exclue="true"/>
    <mapping path="/*/view*" exclue="true"/>
    <mapping path="/*/edit*" exclue="true"/>

</sitemesh>